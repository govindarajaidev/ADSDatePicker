{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "downlevelIteration": true
  },
  "include": ["src/lib/**/*"],
  "exclude": ["node_modules", "dist", "src/App.tsx", "src/main.tsx", "**/*.test.ts", "**/*.test.tsx"]
}
